# Production Environment Configuration
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# Application Configuration
NEXT_PUBLIC_APP_NAME="AI Interview Assistant"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="AI-powered interview preparation and assistance platform"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_A11Y_FEATURES=true

# Authentication Configuration
NEXT_PUBLIC_JWT_STORAGE_KEY=ai_interview_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=ai_interview_refresh
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Audio Configuration
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=16000
NEXT_PUBLIC_AUDIO_CHANNELS=1
NEXT_PUBLIC_AUDIO_BIT_DEPTH=16
NEXT_PUBLIC_MAX_RECORDING_DURATION=1800000
NEXT_PUBLIC_AUDIO_CHUNK_SIZE=4096

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30000

# UI Configuration
NEXT_PUBLIC_THEME_DEFAULT=light
NEXT_PUBLIC_LANGUAGE_DEFAULT=en
NEXT_PUBLIC_TIMEZONE_DEFAULT=UTC

# Performance Configuration
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_CACHE_STRATEGY=stale-while-revalidate
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_LAZY_LOADING=true

# Analytics Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
NEXT_PUBLIC_MIXPANEL_TOKEN=${MIXPANEL_TOKEN}
NEXT_PUBLIC_HOTJAR_ID=${HOTJAR_ID}

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN_FRONTEND}
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production
NEXT_PUBLIC_SENTRY_RELEASE=${APP_VERSION}

# CDN Configuration
NEXT_PUBLIC_CDN_URL=${CDN_URL}
NEXT_PUBLIC_ASSETS_URL=${ASSETS_URL}

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=${CSP_NONCE}
NEXT_PUBLIC_ENABLE_HTTPS_ONLY=true
NEXT_PUBLIC_SECURE_COOKIES=true

# Social Media Integration
NEXT_PUBLIC_LINKEDIN_APP_ID=${LINKEDIN_APP_ID}
NEXT_PUBLIC_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}

# Subscription Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
NEXT_PUBLIC_ENABLE_BILLING=true

# Feature Limits
NEXT_PUBLIC_FREE_TIER_SESSIONS=3
NEXT_PUBLIC_FREE_TIER_MINUTES=30
NEXT_PUBLIC_PRO_TIER_SESSIONS=100
NEXT_PUBLIC_PRO_TIER_MINUTES=1200

# Support Configuration
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_CHAT_ENABLED=true
NEXT_PUBLIC_HELP_CENTER_URL=https://help.yourdomain.com

# Legal Configuration
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=https://yourdomain.com/cookies

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZE=false
NEXT_TELEMETRY_DISABLED=1